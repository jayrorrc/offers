 <%= render 'nav' %>

<div class="card">
  <div class="card-body">
    <h3 class="card-title">Offers <%= link_to '+', new_offer_path %></h3>

    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>URL</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @offers.each do |offer| %>
          <tr scope="row">
            <td><%= offer.id %></td>
            <td><%= offer.advertiser_name %></td>
            <td><%= offer.url %></td>
            <td><%= offer.status %></td>
            <td>
              [<%= link_to 'edit', edit_offer_path(offer) %>]

              <% if offer.status == 'enabled' %>
                [<%= link_to 'disable',
                      toggle_status_path(offer),
                      method: :post
                  %>]
              <% else %>
                [<%= link_to 'enable',
                      toggle_status_path(offer),
                      method: :post
                  %>]
              <% end %>

              [<%= link_to 'destroy', offer_path(offer),
                    method: :delete,
                    data: { confirm: 'Are you certain you want to delete this?' }
                %>]
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
